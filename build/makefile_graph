srcFiles = Graph.cpp GraphAction.cpp GraphActionTargetable.cpp GraphActionThreadPoolWorkUnit.cpp GraphEdge.cpp GraphNode.cpp \
./actions/PingAction.cpp \
./nodes/TestNode.cpp

hdrFiles = Graph.hpp GraphAction.hpp GraphActionTarget.hpp GraphActionTargetable.hpp graphActionFlagRegister.hpp \
GraphActionThreadPoolWorkUnit.hpp GraphEdge.hpp GraphNode.hpp \
./actions/PingAction.hpp \
./actionTargets/PingActionTarget.hpp \
./nodes/TestNode.cpp

objFiles = $(patsubst %.cpp, ./$(outputdir)/%.o, $(srcFiles))

CXX = $(cname)
CXXFLAGS = $(cflags)

# Tell make to search other paths. Separate multiple with ":"
VPATH = ../src/graph/

graph.a : $(objFiles)
	@ echo
	@ echo "*** Building Graph Module ***"
	@ echo
	ar rcs graph.a $(objFiles)

# During clean ignore make.dep being rebuilt during only to be removed again.
ifneq ($(MAKECMDGOALS),clean)
   include make.dep
endif

PHONY : dep
dep : make.dep

make.dep : $(srcFiles) $(hdrFiles)
	@ echo
	@ echo "*** Building Graph Dependencies ***"
	@ echo
	  $(cname) $(sdl_cflags) $(depflags) -MM $(srcFiles) > make.dep
	@ echo
	@ echo "*** Graph Dependencies Built Okay ***"
	@ echo

PHONY : clean
clean :
	@ echo
	@ echo "*** Cleaning Graph Module ***"
	@ echo
	-rm -f *.o make.dep graph.a
