ifneq ($(MAKECMDGOALS),clean)
    include $(objFiles:.o=.dep)
    -include $(objFiles:.o=.depMake)
endif

%.dep : %.cpp
	@ mkdir -p $$(dirname $@)
	@ $(cname) -MM $< > $@
	@ $(cname) -MM -MT $@ $< > $@Make
    # Build the depMake include file.
	@ echo -e "\t\$$(cname) -MM $$< > \$$@" >> $@Make
	@ echo -e "\t\$$(cname) -MM -MT \$$@ $$< > \$$@Make" >> $@Make
